<h1>Items </h1>
<%= link_to 'Add new item', new_item_path %>
<ul>
    <% @items.each do |item|%>
        <li> <%= item.name %>  </li>
    <% end %>
</ul>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Expected cost</th>
            <th>Done</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item|%>
        <tr> 
            <td><%= item.id %></td>
            <td><%= link_to item.name, item %></td>
            <td><%= item.expected_cost %></td>
            <td><%= item.is_done %></td>
            <td>
                <td> <%= link_to 'Edit ', edit_item_path(item) %> </td>
                <td> <%= button_to 'Delete', item, method: :delete %> </td>
        </tr>
        <% end  %>
    </tbody>
</table>